<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape  android:shape="rectangle" >

            <solid android:color="@color/green_800" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                />

            <stroke android:width="6dp" android:color="@color/green_900" />
        </shape>
    </item>


    <item android:state_enabled="true">
        <shape  android:shape="rectangle" >

            <solid android:color="@color/green_400" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                />

            <stroke android:width="6dp" android:color="@color/green_900" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape  android:shape="rectangle" >

            <solid android:color="@color/grey_BE" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                />

            <stroke android:width="6dp" android:color="@color/grey_66" />
        </shape>
    </item>

</selector>